<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.randompage.samples.hibernate.domain">
	<class name="Result" table="WF_NOBILL">
		<id name="memberMsisdn" column="msisdn" />
		<property name="date" type="timestamp" column="CTIME" />
		<property name="request" />
		<property name="action" />
	</class>

	<!-- stored procedure queries -->
	<sql-query name="result.find" callable="true" >
		<return class="Result"/>
		<![CDATA[ 
			{? = call FindUser(:var)}
		]]>
	</sql-query>

	<!-- HQL queries -->
	<query name="result.all">from Result</query>
</hibernate-mapping>