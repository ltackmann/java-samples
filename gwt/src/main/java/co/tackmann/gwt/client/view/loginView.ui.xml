<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:my="urn:import:org.randompage.bookmarking.frontend.client.ui">
    <ui:with field="res" type="org.randompage.bookmarking.frontend.client.resource.Resources"/>
    <ui:with field="msg" type="org.randompage.bookmarking.frontend.client.resource.i18n.Messages"/>
    <gwt:HTMLPanel>
        <div id="header">
            <ul class="inline-list">
                <li>
                    <a href="http://www.apple.com">Apple</a>
                </li>
                <li>
                    <a href="http://www.google.com">Google</a>
                </li>
                <li>
                    <a href="http://www.twitter.com">Twitter</a>
                </li>
            </ul>
        </div>
        <div id="container">
            <div id="center">
                <h1 class="logo">Bookmarking</h1>
                <gwt:DeckPanel styleName="banner" ui:field="bannerPanel" />
                <p>
                    <gwt:Label text="{msg.topicsTitle}"/>
                </p>
                <div id="topicbox">
                    TODO content
                </div>
            </div>
            <div id="right" class="column">
                <my:LoginBox identifier="loginbox"/>
                <my:SignupBox identifier="signupbox"/>
            </div>
        </div>
        <div id="footer">
            <ul class="inline-list">
                <li>
                    <li>Â© 2010 Lars Tackmann</li>
                    <li>
                        <a href="http://www.randompage.org">Blog</a>
                    </li>
                </li>
            </ul>
        </div>
    </gwt:HTMLPanel>
</ui:UiBinder>


      
